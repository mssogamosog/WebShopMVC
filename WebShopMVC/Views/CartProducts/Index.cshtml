@model IEnumerable<WebShopMVC.Models.CartProducts>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cart)
            </th>
            <th>
                Product Id
            </th>

            <th>
                Product
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cart.CartId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                <a asp-action="Details" asp-controller="Products" asp-route-id="@item.Product.ProductId" >Edit</a> ]
                <a asp-action="Delete" asp-route-ProductId="@item.Product.ProductId" asp-route-CartId="@item.Cart.CartId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
